{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('event_delete', {id: event.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete Event</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="quote_verse">Event title</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="quote_title" placeholder="Post Title"
                                   name="quote[verse]" value="{{ event.title }}" disabled>
                        </div>
                    </div>
                    {#<div class="col-sm-4 ">#}
                        {#<input type="text" class="form-control" id="quote_related" placeholder="Post Title"#}
                               {#name="quote[related]" value="{{ quote.relatedQuotes }}" disabled>#}
                    {#</div>#}
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="quote_meaning">Etymology</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="quote_meaning"
                                  name="category[title]" disabled>{{ event.meaning }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('event_view', {id: event.id}) }}">Cancel</a>
                            <button href="{{ path('event_delete', {id: event.id}) }}" type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>



{% endblock %}