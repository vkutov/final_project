{% extends 'base.html.twig' %}

{% block main %}
<body background='uploads/images/pentagram.jpg'>
    <h4>"Take no part in the unfruitful works of darkness, but instead expose them."(Ephesians 5:11)</h4>
    <div class="container body-content">
        <div class="row">
            {% for actor in pagination %}
                <div class="col-md-12">
                    <article>
                        <header>
                            <h2>" {{ actor.title }}"</h2>
                        </header>
                        <p>
                            "{{ actor.summary }}"
                        </p>
                        {% if(actor.image) %}
                            <img src="{{ asset('uploads/images/' ~ actor.image) }}" width="400" height="200" >
                        {% endif %}
                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('actor_view', {'id': actor.id}) }}">Read more &raquo;</a>
                            </div>
                            {#<div class="pull-right">#}
                            {#<a class="btn btn-danger btn-xs" href="{{ path('article_delete', {'id':quote.id}) }}">delete &raquo;</a>#}
                            {#<a class="btn btn-success btn-xs" href="{{ path('article_edit', {'id':quote.id}) }}">edit &raquo;</a>#}
                            {#<a class="btn btn-default btn-xs"#}
                            {#href="{{ path('blog_index') }}">back &raquo;</a>#}
                            {#</div>#}
                        </footer>
                    </article>
                </div>

                <hr />

            {% endfor %}
        </div>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>


{% endblock %}
