{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content">
        <div class="row">
            {% for actors in pagination %}
                <div class="col-md-12">
                    <article>
                        <header>
                            <h2>" {{ actors.title }}"</h2>
                        </header>
                        <p>
                            {{ actors.summary }}
                        </p>
                        {% if(actors.image) %}
                            <img src="{{ asset('uploads/images/' ~ actors.image) }}" width="400" height="200" >
                        {% endif %}
                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('actor_view', {'id': actors.id}) }}">Read more &raquo;</a>
                            </div>
                            {#<div class="pull-right">#}
                            {#<a class="btn btn-danger btn-xs" href="{{ path('article_delete', {'id':quote.id}) }}">delete &raquo;</a>#}
                            {#<a class="btn btn-success btn-xs" href="{{ path('article_edit', {'id':quote.id}) }}">edit &raquo;</a>#}
                            {#<a class="btn btn-default btn-xs"#}
                            {#href="{{ path('blog_index') }}">back &raquo;</a>#}
                            {#</div>#}
                        </footer>
                    </article>
                </div>

                <hr />

            {% endfor %}
        </div>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>


{% endblock %}
