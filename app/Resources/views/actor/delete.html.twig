{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('actor_delete', {id: actor.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete Actor</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="actor_title">Actor Title</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="quote_title" placeholder="Post Title"
                                   name="actor[title]" value="{{ actor.title }}" disabled>
                        </div>
                    </div>
                    {#<div class="col-sm-4 ">#}
                    {#<input type="text" class="form-control" id="quote_related" placeholder="Post Title"#}
                    {#name="quote[related]" value="{{ quote.relatedQuotes }}" disabled>#}
                    {#</div>#}
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="quote_meaning">Meaning</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="quote_meaning"
                                  name="actor[meaning]" disabled>{{ actor.meaning }}</textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('actor_view', {id: actor.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>



{% endblock %}