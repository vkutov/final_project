{% extends 'base.html.twig' %}

{% block main %}
    <body background='uploads/images/pentagram.jpg'>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                <article>
                    <header>
                        <h2>Title: "{{ actor.title }}"</h2>
                    </header>
                    {#<p>#}
                        {#Place: {{ actor. }}#}
                    {#</p>#}
                    <p>
                        Meaning: {{ actor.meaning }}
                    </p>
                    <p>
                        {% if actor.quotes is not empty %}
                            Quote(s):
                            {% for quote in actor.quotes%}
                                <br><a href="{{ path('quote_view', {id: quote.id}) }}">  {{ quote.verse }} </a>({{  quote.summary }})
                            {% endfor %}
                        {% endif %}
                    </p>
                    <p>
                        {% if actor.categories is not empty %}
                            Category(ies):
                            {% for cat in actor.categories%}
                                <br><a href="{{ path('category_view', {id: cat.id}) }}">  {{ cat.title }} </a>({{ cat.summary }})
                            {% endfor %}
                        {% endif %}
                    </p>
                    <p>
                        {% if actor.events is not empty %}
                            Event(s):
                            {% for event in actor.events%}
                                <br><a href="{{ path('event_view', {id: event.id}) }}">  {{ event.title }} </a>({{ event.summary }})
                            {% endfor %}
                        {% endif %}
                    </p>
                    <p>
                        {% if actor.symbols is not empty %}
                            Symbol(s):
                            {% for symbol in actor.symbols%}
                                <br><a href="{{ path('symbol_view', {id: symbol.id}) }}">  {{ symbol.name }} </a>({{ symbol.summary }})
                            {% endfor %}
                        {% endif %}
                    </p>
                    <p>
                        {% if actor.relatedActors is not empty %}
                            Related Actors:
                            {% for related in actor.relatedActors%}
                                <br><a href="{{ path('actor_view', {id: related.id}) }}">  {{ related.title }} </a>({{ related.summary }})
                            {% endfor %}
                        {% endif %}
                    </p>
                    {% if(actor.image) %}
                        <img src="{{ asset('uploads/images/' ~ actor.image) }}" width="400" height="200" >
                    {% endif %}
                    {% if app.getUser().getId==actor.id or app.getUser().isAdmin() %}

                    <p>
                        <div class="pull-right">
                            <a class="btn btn-danger btn-xs" href="{{ path('actor_delete', {'id':actor.id}) }}">delete &raquo;</a>
                            <a class="btn btn-success btn-xs" href="{{ path('actor_edit', {'id':actor.id}) }}">edit &raquo;</a>
                            {% endif %}
                    <p>
                    <div>
                        <a class="btn btn-default btn-xs"
                           href="{{ path('blog_index') }}">back &raquo;</a>
                    </div>
                    </p>
                    </footer>
                </article>
            </div>

            <hr />
        </div>
    </div>


{% endblock %}